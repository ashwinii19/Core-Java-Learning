	<h2>Employee Salary in Different Currencies:</h2>
	<!-- Inida Currency -->
	<fmt:setLocale value="en_IN" />
	India:
	<fmt:formatNumber value="${salary}" type="currency" />
	<br>

	<!-- US Currency -->
	<fmt:setLocale value="en_US" />
	US:
	<fmt:formatNumber value="${salary}" type="currency" />
	<br>

	<!-- Japanese Yen -->
	<fmt:setLocale value="ja_JP" />
	Japan:
	<fmt:formatNumber value="${salary}" type="currency" />
	<br>

	<!-- German Euro -->
	<fmt:setLocale value="de_DE" />
	Germany:
	<fmt:formatNumber value="${salary}" type="currency" />
	<br>

</body>
