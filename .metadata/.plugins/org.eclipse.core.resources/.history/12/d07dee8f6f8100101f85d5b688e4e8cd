package com.courses.controller;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.coruses.model.Student;
import com.coruses.model.User;

@WebServlet("/student")
public class StudentServlet extends HttpServlet {
    protected void doGet(HttpServletRequest req, HttpServletResponse res) throws ServletException, IOException {
        // Check if session exists
        HttpSession session = req.getSession(false);
        if (session == null) {
            res.sendRedirect(req.getContextPath() + "/login.jsp");
            return;
        }

        User user = (User) session.getAttribute("user");
        if (user == null) {
            res.sendRedirect(req.getContextPath() + "/login.jsp");
            return;
        }

        Student student = Studentdb.getStudentByUsername(user.getUsername());
        if (student == null) {
            req.setAttribute("message", "No student data available.");
        } else {
            req.setAttribute("student", student);
        }

        req.getRequestDispatcher("/studentDashboard.jsp").forward(req, res);
    }
}
